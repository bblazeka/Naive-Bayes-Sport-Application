<Window x:Class="Desktop.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Player" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel>
                <TextBox Name="searchBox">Search a player...</TextBox>
                <Button Name="searchButton">Search</Button>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Name="playerData" FontSize="24" FontWeight="Bold"></TextBlock>
                <Image Name="flag" Height="24" Width="28"></Image>
            </WrapPanel>
            <StackPanel>
                <WrapPanel>
                    <Label>Team</Label>
                    <ComboBox Name="cmbTeams"></ComboBox>
                </WrapPanel>
                <TextBlock Name="dataBlock" FontSize="16"></TextBlock>
            </StackPanel>
            <WrapPanel>
                <Button Content="Update"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
