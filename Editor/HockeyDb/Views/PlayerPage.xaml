<local:BasePage x:Class="HockeyDb.Views.PlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HockeyDb.Views"
      mc:Ignorable="d" 
      Title="PlayerPage">

    <Grid>
        <TabControl>
            <TabItem Header="Database" Margin="1,0,-1,0" Height="20">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="93*"/>
                        <ColumnDefinition Width="781*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PlayerCb" HorizontalAlignment="Left" Margin="64,16,0,0" VerticalAlignment="Top" Width="229" SelectionChanged="PlayerCb_SelectionChanged" Grid.Column="1" Height="22" Grid.ColumnSpan="2"/>
                    <DataGrid x:Name="SeasonsDataGrid" Margin="255,46,57,10" AutoGenerateColumns="False" Grid.Column="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Season" Binding="{Binding SeasonId}"/>
                            <DataGridTemplateColumn Header="" Width="SizeToCells" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Height="20" Source="{Binding Team.TeamLogo}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Team" Binding="{Binding Team.TeamName}"/>
                            <DataGridTemplateColumn Header="" Width="SizeToCells" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Height="10" Source="{Binding Team.Flag}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="League" Binding="{Binding League.LeagueShort}"/>
                            <DataGridTextColumn Header="" Binding="{Binding SequNo}" x:Name="SequNo" Visibility="Collapsed"/>
                            <DataGridTextColumn Header="#" Binding="{Binding Nr}"/>
                            <DataGridTextColumn Header="GP" Binding="{Binding GP}"/>
                            <DataGridTextColumn Header="G" Binding="{Binding Goals}" x:Name="GoalsCol"/>
                            <DataGridTextColumn Header="A" Binding="{Binding Assists}" x:Name="AssistCol"/>
                            <DataGridTextColumn Header="PTS" Binding="{Binding Points}" x:Name="PtsCol"/>
                            <DataGridTextColumn Header="PIM" Binding="{Binding PIM}" x:Name="PimCol"/>
                            <DataGridTextColumn Header="GAA" Binding="{Binding GoalsAgainstAvg}" x:Name="GAACol"/>
                            <DataGridTextColumn Header="SVS%" Binding="{Binding SavesPercent}" x:Name="SvsCol"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="UpdateBtn" Content="Update" HorizontalAlignment="Left" Margin="393,17,0,0" VerticalAlignment="Top" Click="UpdateBtn_Click" Grid.Column="2" Height="20" Width="43"/>
                    <Label x:Name="FullNameLabel" Content="Name:" Grid.Column="1" HorizontalAlignment="Left" Margin="2,54,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="FullNameTb" Grid.Column="1" HorizontalAlignment="Left" Margin="64,58,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="PositionTb" HorizontalAlignment="Left" Margin="64,126,0,0" Text="Pos" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" Grid.Column="1" Height="18" Grid.ColumnSpan="2"/>
                    <Label x:Name="PosLbl" Content="Position" Grid.Column="1" HorizontalAlignment="Left" Margin="0,122,0,0" VerticalAlignment="Top" Height="26" Width="52"/>
                    <Label x:Name="NatLbl" Content="Nationality" HorizontalAlignment="Left" Margin="0,168,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="68"/>
                    <TextBox x:Name="BirthplaceTb" Grid.Column="1" HorizontalAlignment="Left" Margin="64,149,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Height="18" Grid.ColumnSpan="2"/>
                    <Label x:Name="BirthplaceLbl" Content="Birthplace" HorizontalAlignment="Left" Margin="0,145,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="63" RenderTransformOrigin="-0.238,0.503"/>
                    <DatePicker x:Name="BirthdateDP" Grid.Column="1" HorizontalAlignment="Left" Margin="64,85,0,0" VerticalAlignment="Top" Height="24" Width="129" Grid.ColumnSpan="2"/>
                    <Label x:Name="BirthdateLbl" Content="Birthdate" HorizontalAlignment="Left" Margin="2,85,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="58"/>
                    <ComboBox x:Name="NatCb" HorizontalAlignment="Left" Margin="64,172,0,0" VerticalAlignment="Top" Width="57" Grid.Column="1" Height="22" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="Nat2Cb" HorizontalAlignment="Left" Margin="61,172,0,0" VerticalAlignment="Top" Width="58" Grid.Column="2" Height="22"/>


                    <ComboBox x:Name="NatFilterCb" HorizontalAlignment="Left" Margin="2,15,0,0" VerticalAlignment="Top" Width="57" Grid.Column="1" Height="22" SelectionChanged="NatFilterCb_SelectionChanged"/>
                    <Button x:Name="BtnNext" Content="Next" Grid.Column="2" HorizontalAlignment="Left" Margin="245,18,0,0" VerticalAlignment="Top" Click="BtnNext_Click"/>
                    <CheckBox x:Name="CbActive" Content="Active" Grid.Column="2" HorizontalAlignment="Left" Margin="172,61,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="CommentTb" Grid.Column="1" HorizontalAlignment="Left" Margin="67,217,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Grid.ColumnSpan="2" Height="91"/>
                    <CheckBox x:Name="cbInfoColumns" Content="Show Info Cols" Grid.Column="2" HorizontalAlignment="Left" Margin="571,20,0,0" VerticalAlignment="Top" Click="cbInfoColumns_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Advanced" Margin="1,0,-1,0" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="IdTb" HorizontalAlignment="Left" Margin="24,66,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" RenderTransformOrigin="0.483,2.285"/>
                    <TextBox x:Name="NameTb" HorizontalAlignment="Left" Margin="24,90,0,0" Text="FullName" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
                    <Button x:Name="Insert" Content="Insert Player" HorizontalAlignment="Left" Margin="106,167,0,0" VerticalAlignment="Top" Click="Insert_Click" RenderTransformOrigin="0.536,2.507"/>
                    <ComboBox x:Name="SeasonCb" ItemsSource="{Binding Source={StaticResource Seasons}}" HorizontalAlignment="Left" Margin="24,218,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
                    <Button x:Name="InsertPlayerTeamTb" Content="Insert" HorizontalAlignment="Left" Margin="149,219,0,0" VerticalAlignment="Top" Click="InsertPlayerTeamTb_Click" Width="68"/>
                    <ComboBox x:Name="TeamCb" HorizontalAlignment="Left" Margin="24,192,0,0" VerticalAlignment="Top" Width="252" RenderTransformOrigin="1.608,-0.727"/>
                    <ComboBox x:Name="PlayerCb_Copy" HorizontalAlignment="Left" Margin="24,39,0,0" VerticalAlignment="Top" Width="252" SelectionChanged="PlayerCb_Copy_SelectionChanged"/>
                    <Button x:Name="ResetBtn" Content="Reset fields" HorizontalAlignment="Left" Margin="24,259,0,0" VerticalAlignment="Top" Click="ResetBtn_Click"/>
                    <Button x:Name="DeletePlayerTeamBtn" Content="Delete" HorizontalAlignment="Left" Margin="223,219,0,0" VerticalAlignment="Top" Click="DeleteBtn_Click" Width="53"/>
                    <DataGrid x:Name="PlayersGrid" Margin="308,10,24,97" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding FullName}"/>
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}"/>
                            <DataGridTextColumn Header="" Binding="{Binding Nation}"/>
                            <DataGridTextColumn Header="" Binding="{Binding Nation2}"/>
                            <DataGridTextColumn Header="Birthplace" Binding="{Binding BirthPlace}"/>
                            <DataGridTextColumn Header="Birthdate" Binding="{Binding Birthdate, StringFormat=\{0:dd.MM.yyyy.\}}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="UpdatePlayersBtn" Content="Update Edited Players" HorizontalAlignment="Left" Margin="428,319,0,0" VerticalAlignment="Bottom" Click="UpdatePlayersBtn_Click"/>
                    <ComboBox x:Name="NatCb_Copy" HorizontalAlignment="Left" Margin="24,165,0,0" VerticalAlignment="Top" Width="77" Height="22"/>
                    <TextBox x:Name="PosTb" HorizontalAlignment="Left" Margin="24,119,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="77"/>
                    <Button x:Name="copySelectedBtn" Content="Copy selected" HorizontalAlignment="Left" Margin="330,0,0,25" VerticalAlignment="Bottom" Click="copySelectedBtn_Click"/>
                    <TextBox x:Name="BirthplaceAdvancedTb" HorizontalAlignment="Left" Margin="24,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
                    <DatePicker x:Name="AdvDatePicker" HorizontalAlignment="Left" Margin="106,113,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</local:BasePage>
